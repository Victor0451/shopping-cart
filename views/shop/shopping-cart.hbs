{{#if products}}

<div class="container px-lg-5 mt-4 mb-4">
    <div class="row mx-lg-n5">
        <div class="col-6 col-sm-6 col-md-8 mx-auto">
            <ul class="list-group">
                {{#each products}}
                <li class="list-group-item">
                    <span class="badge badge-secondary">{{this.qty}}</span>
                    <strong> {{ this.item.title }}</strong>
                    <span class="badge badge-secondary"> ${{this.price}}</span>
                    <div class="col-4 col-sm-6 col-md-4 float-right mx-auto">
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                <span class="caret">Action</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                <li><a class="dropdown-item" href="/remove/{{this.item._id}}">Remove all</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>


    <div class="row mx-lg-n5 mt-4">
        <div class="col-12 col-sm-8  mx-auto">
            <strong class="alert alert-primary ">Total: $ {{totalPrice}}</strong>

            <div class="mt-3">
                <a href="/checkout" class="btn btn-success btn-block">Checkout</a>
            </div>
        </div>
    </div>
</div>

{{else}}

<div class="row mx-lg-n5">
    <div class="col-6 col-sm-6 col-md-8 mx-auto mt-4">
        <h2 class="alert alert-danger text-center">No Itmes in cart</h2>
    </div>
</div>

</div>


{{/if}}